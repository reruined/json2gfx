{
    "floorGeometry": {
        "shapes": [{
            "shape": "quad",
            "orientation": [-90, 0, 0],
            "scale": [10, 1, 10]
        }]
    },

    "grassClusterGeometry": {
        "shapes": [
            {
                "shape": "triangle",
                "position": [0, 0.5, 0],
                "scale": [1, 1, 0]
            },
            {
                "shape": "triangle",
                "position": [-0.2, 0.5, 0],
                "scale": [1, 1, 0]
            }
        ]
    },

    "boxGeometry": {
        "shapes": [{
            "shape": "cube"
        }]
    },

    "floor": {
        "geometry": "@floorGeometry",
        "albedo": [1, 1, 1, 1],
        "position": [0, 0, 0]
    },

    "grassCluster": {
        "parent": "@floor",
        "position": [0, 0, 0],
        "orientation": [0, 0, 0],

        "children": {
            "template": {
                "albedo": [0, 1, 0, 1],
                "geometry": "@grassClusterGeometry"
            },
            "position": {
                "min": [-1, 0, -1],
                "max": [1, 0, 1]
            },
            "orientation": {
                "min": [0, -25, 0],
                "max": [0, 25, 0]
            },
            "count": 15,
            "seed": 0
        }
    },

    "camera": {
        "fov": 90,
        "near": 0.1,
        "far": 100,
        "position": [0, 3, 3],
        "lookat": [0, 1, 0]
    }
}
