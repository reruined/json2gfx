{
    "geometries": {
        "ground": {
            "shape": "quad",
            "albedo": "cornsilk",
            "orientation": [-90, 0, 0],
            "scale": 400
        },

        "road": {
            "shape": "plane",
            "albedo": "navajowhite",
            "orientation": [-90, 0, 0],
            "scale": [2, 0, 200]
        },

        "cliff1": {
            "shape": "cube",
            "albedo": "white",
            "position": [0, 1.5, 0],
            "scale": [1, 3, 1]
        },

        "cliff2": {
            "shape": "cube",
            "albedo": "sandybrown",
            "scale": [5, 10, 1],
            "position": [0, 5, 0]
        },

        "rock": {
            "shape": "cube",
            "albedo": "navajowhite",
            "scale": [0.2, 0.2, 0.2],
            "position": [0, 0.025, 0]
        },

        "big-rock": {
            "shape": "cube",
            "albedo": "navajowhite",
            "scale": [0.8, 0.3, 0.8],
            "position": [0, 0.15, 0]
        }
    },

    "templates": {
        "rock": {
            "geometry": "@geometries.rock"
        }
    },

    "scene": {
        "ground": {
            "shadow": false,
            "geometry": "@geometries.ground",
            "position": [0, 0, 0],

            "children": {
                "camera": {
                    "position": [-6, 2, 10],
                    "lookAt": [2, 1, -0],
                    "projection": "perspective",
                    "fov": 80,
                    "near": 0.1,
                    "far": 100
                },

                "road": {
                    "geometry": "@geometries.road",
                    "position": [-5, 0.01, 0],
                    "shadow": false
                },

                "cliff1": {
                    "geometry": "@geometries.cliff1",
                    "position": [-1, 0, 7],
                    "shadow": true
                },

                "cliff2": {
                    "shadow": true,
                    "geometry": "@geometries.cliff2",
                    "position": [10, 0, -15]
                },

                "big-rocks": {
                    "generator": {
                        "source": "@geometries.big-rock",
                        "min": [-20, 0, -200],
                        "max": [50, 0, 50],
                        "count": 500
                    }
                },

                "rocks": {
                    "generator": {
                        "source": "@geometries.rock",
                        "min": [-4, 0, -200],
                        "max": [50, 0, 50],
                        "count": 2000
                    }
                },

                "rocks-left-of-road": {
                    "generator": {
                        "source": "@geometries.rock",
                        "min": [-20, 0, -200],
                        "max": [-6.3, 0, 50],
                        "count": 2000
                    }
                },

                "sun": {
                    "light": {
                        "type": "directional",
                        "color": "white",
                        "intensity": 0.5,
                        "direction": [1, -1, 0.4]
                    }
                }
            }
        }
    },

    "render": "@scene",
    "camera": "@scene.ground.children.camera",
    "backColor": "skyblue"
}
